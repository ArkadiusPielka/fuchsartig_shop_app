<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingVertical="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/produkt_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        style="@style/tv_title"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:text="@string/test"
        app:layout_constraintStart_toEndOf="@+id/img_product"
        app:layout_constraintTop_toTopOf="@+id/img_product" />

    <TextView
        android:id="@+id/info_price"
        style="@style/tv_title"
        android:text="@string/amount_price"
        app:layout_constraintBottom_toBottomOf="@+id/btn_edit_price"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <EditText
        android:id="@+id/input_price"
        style="@style/tv_title"
        android:layout_width="50dp"
        android:layout_marginStart="8dp"
        android:gravity="end"
        android:text="10.95"
        android:enabled="false"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/btn_edit_price"
        app:layout_constraintStart_toEndOf="@+id/info_price"
        app:layout_constraintTop_toTopOf="@+id/btn_edit_price" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/baseline_euro_24"
        app:layout_constraintBottom_toBottomOf="@+id/btn_edit_price"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_price"
        app:layout_constraintTop_toTopOf="@+id/btn_edit_price" />

    <ImageButton
        android:id="@+id/btn_edit_price"
        style="@style/ic_btn"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/textView"
        style="@style/tv_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/current_amount"
        app:layout_constraintStart_toEndOf="@+id/img_product"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_price" />

    <EditText
        android:id="@+id/input_amount"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center"
        android:inputType="number"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>